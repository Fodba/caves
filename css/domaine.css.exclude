body {
}

/* ------------------------------------ PORTFOLIO ----------------------------------------*/

.portfolio{
    overflow:hidden;
    position:absolute;
    background-color:#000000;
	width:98%;
	top:80px;
	overflow:visible !important;
    padding:0;
}

/* ------------------------------------ THUMB ---------------------------------------------*/

 .portfolio li{
	/*list-style-type:none;*/
	/*width:180px;*/
    height:150px;
	/*margin-top: 10px;*/
    margin:0;
    padding:0;
    position:absolute;
    overflow:hidden;
    /*min-height:400px;
    max-height:600px;*/
    position:absolute;
    opacity:0.3;
 }
 .portfolio li{
	background-color: rgba(255,255,255,0.9);
 }

.portfolio li:hover{
    opacity:1;
}
 .portfolio li div{
	text-decoration:none;
	color: #9e1237;
	font-weight: bold;
	font-size: 12px;
 }
 .isotope{
    padding:0;
    margin:0;
 }
 li.isotope-item{
    padding:0;
    margin:0;
 }
/* ------------------------------------ LINK_DOMAIN ---------------------------------------------*/
.linkDomain{
    margin:0;
    padding:0;
}
 .portfolio li div a{
	text-decoration:none;
	color: #9e1237;
	font-weight: bold;
	font-size: 12px;
	
 }

 .portfolio li div a p{
	display:none;
 }
/* ------------------------------------ INFOSSUP ---------------------------------------------*/
.infosSup{
    display:block;
    background-color:white;
    position:absolute;
    left:180px;
    width:360px;
    height:180px;
}

/* ------------------------------------ VOILE ---------------------------------------------*/

.voile{
	height:50px;
	width:180px;
	background-color: #9e1237 !important;
	position:absolute;
	display:none;
	bottom: 12px;
	text-align:center;
	opacity: 0.9;
    z-index:5;
}
 .voile div{
	color:white;
	margin-top: 12px;
	font-weight: normal;
	letter-spacing: 4px;
 }
 .portfolio li a:hover .voile{
	/*display:block*/
 }
/* ------------------------------------ PHOTO_VIGNERON ---------------------------------------------*/

.photoVigneron{
    filter: url('/scripts/filters.svg#grayscale'); /* Firefox 3.5+ */
    filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale"); /* Firefox 3.5+ */  
    filter: gray; /* IE6-9 */
    -webkit-filter: grayscale(1); /* Webkit Nightlies & Google Chrome Canary */
    z-index:3;
    /*width:333px !important;*/
    height:180px;
    width:180px;
}





